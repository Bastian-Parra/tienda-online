<!DOCTYPE html>
<html lang="es">
<head>
    <title>Lista de Productos</title>
</head>
<body>
    <div id="container">
    <h1>Lista de Productos</h1>
    <ul>
        <% productos.forEach(producto => { %>
            <li>
                <%= producto.Tipoproducto.descripcionProducto %>%>
                <a id="detail-btn" href="/productos/obtenerProducto/<%= producto.idTipoProducto %>">Ver detalles</a>
            </li>
        <% }) %>
    </ul>
    </div>
    <a id="out-btn" href="/productos/mostrarFormularioCrear">Crear Producto</a>
    <a id="out-btn" href="/">Volver</a>
</body>

<style>
    h1 {
        padding: 0;
        margin-bottom: 0px 0px 10px 0px;
    }
    body {
        margin: 0 auto;
        width: 500px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background-color: #f2f2f2;
    }

    #container {
        display: flex;
        align-content: center;
        flex-direction: column;
        width: 500px;
        margin-top:50px;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 2px solid grey;
    }
    h1 {
        text-align: center;
    }
    ul {
        list-style: decimal;
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin: 0;
        padding: 0;
    }

    ul li {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #out-btn {
        background-color: grey;
        color: #fff;
        padding: 5px 10px 5px 10px;
        margin-top: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid grey;
        margin-bottom: 10px;
    }

    #out-btn:hover {
        background-color: #fff;
        transition: 0.5s;
        color: grey;
        border: 2px solid grey;

    }

    #detail-btn {
        background-color: grey;
        text-decoration: none;
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        font-weight: 600;
    }
</style>
</html>